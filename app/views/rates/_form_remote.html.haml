= render_model_errors @rate
= form_for @rate, :remote => true, :html => {:role => 'form', :id => 'rate_form_remote'} do |f|  
  .form-group
    .row
      .col-md-4
        = f.label :type, t('.type')
        = f.select :type, rate_select_options(:types), {}, :class => 'form-control'
      .col-md-8
        = f.label :name, t('.name')
        = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :value, t('.value')
    .row
      .col-md-4
        = f.select :value_type, rate_select_options(:value_types), {}, :class => 'form-control'
      .col-md-8
        = f.text_field :value, :class => 'form-control'
  .form-group
    .row
      .col-md-4
        .checkbox
          = f.label :always_apply, t('.always_apply_in_reservation')
          = f.check_box :always_apply
      .col-md-8
        .checkbox
          = f.label :hold_for_return, t('.hold_for_further_return')
          = f.check_box :hold_for_return
  .form-group
    .row
      .col-md-4
        .checkbox
          = f.label :seasonable, t('.season_rate')
          = f.check_box :seasonable
      .col-md-8
        .input-daterange.input-group#datepicker
          %span.input-group-addon from
          = f.text_field :start_season, {:class => 'form-control', :disabled => true}.delete_if{|k| @rate.seasonable && k.eql?(:disabled)}
          %span.input-group-addon to
          = f.text_field :end_season, {:class => 'form-control', :disabled => true}.delete_if{|k| @rate.seasonable && k.eql?(:disabled)}
  %hr
  .pull-right= f.submit t('.save'), :class => 'btn btn-primary btn-lg'
  .clearfix
