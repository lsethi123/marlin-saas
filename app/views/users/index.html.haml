%h1= t '.listing_users'

%table
  %tr
    %th= t '.first_name'
    %th= t '.last_name'
    %th= t '.email'
    %th= t '.password'
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.first_name
      %td= user.last_name
      %td= user.email
      %td= user.password
      %td= link_to t('.show'), user
      %td= link_to t('.edit'), edit_user_path(user)
      %td= link_to t('.destroy'), user, :method => :delete, :data => { :confirm => t('.are_you_sure') }

%br

= link_to t('.new_user'), new_user_path
